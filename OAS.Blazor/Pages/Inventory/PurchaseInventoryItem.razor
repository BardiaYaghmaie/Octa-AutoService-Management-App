        @*             <RadzenDataGridColumn TItem="InventoryPageServicesReportModel" Property="Price" Title="عملیات" /> *@
        @*         </Columns> *@
        @*     </RadzenDataGrid> *@
    </RadzenRow>
    

</MudRTLProvider>
